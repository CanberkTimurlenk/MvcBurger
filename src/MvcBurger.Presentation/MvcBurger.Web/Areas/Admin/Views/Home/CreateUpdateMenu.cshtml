@using MvcBurger.Web.Areas.Admin.Models;
@model MenuVM
@{
    Layout = "_AdminLayout";
}

<h2>@TempData["button"]</h2>
<div class="row">
    <div class="col-10">
        <form method="post" asp-area="Admin" asp-action="@TempData["actionName"]" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span asp-validation-for="Name" class="text-danger"></span>
                <label class="control-label" asp-for="Name">Name:</label>
                <input class="form-control" type="text" asp-for="Name" name="Name" />
            </div>

            <div class="form-group">
                <span asp-validation-for="Description" class="text-danger"></span>
                <label class="control-label" asp-for="Description">Description:</label>
                <textarea class="form-control" asp-for="Description" name="Description"></textarea>
            </div>

            <div class="form-group">
                <span asp-validation-for="Price" class="text-danger"></span>
                <label class="control-label" asp-for="Price">Price:</label>
                <input class="form-control" type="text" asp-for="Price" name="Price" />
            </div>

            <div class="form-group">
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <label class="control-label" asp-for="ImageUrl">Image URL:</label>
                <input class="form-control" type="text" asp-for="ImageUrl" name="ImageUrl" />
            </div>
            <br />
            <div class="form-group">
                <button class="btn btn-primary" type="submit">@TempData["button"]</button>
            </div>
        </form>
    </div>
</div>

