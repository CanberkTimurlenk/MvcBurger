
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MvcBurger</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/log.css">
    

</head>
<body>
    <!-- header section starts  -->

    <header class="header d-flex align-items-stretch justify-content-between pb-2">

        <div id="menu-btn" class="fas fa-bars icons"></div>
        <div></div>
        <nav class="navbar">
            <div class="row justify-content-sm-between">
                <div class="col-sm-2 mt-3">

                    <a class="text-decoration-none" asp-action="Index" asp-controller="Home">home</a>

                </div>
                <div class="col-sm-2 mt-3">

                    <a class="text-decoration-none" asp-action="Index" asp-controller="Home">menu</a>

                </div>
                <div class="col-sm-4">

                    <!-- Uncomment the line below if you want to wrap the image as well -->
                    <!-- <a href="#home" class="logo"><img src="/images/logo.png" alt=""></a> -->
                    <img src="/images/logo.png" alt="">

                </div>
                <div class="col-sm-2 mt-3">

                    <a class="text-decoration-none" asp-action="Index" asp-controller="Home">about</a>

                </div>
                <div class="col-sm-2 mt-3">

                    <a class="text-decoration-none" asp-action="Index" asp-controller="Home">contact</a>

                </div>
            </div>
        </nav>
        <div>
            <a asp-action="Cart" asp-controller="Order" class="fas fa-shopping-cart icons me-5"></a>
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-action="Login" asp-controller="Access" class="fas fa-login icons">Login</a>
                <a asp-action="Register" asp-controller="Access" class="fas fa-register icons">Register</a>
            }
            else
            {
                <a asp-action="Logout" asp-controller="Access" class="fas fa-register icons">Logout</a>
            }
        </div>
    </header>

    <!-- header section ends  -->
    <!-- home section starts  -->

    <section class="home" id="home">

        <div class="content">
            @RenderBody()

            
        </div>

    </section>

    <!-- home section ends -->
    
    <!-- contact section starts  -->

    <section class="contact" id="contact">
                

    </section>

    <!-- contact section ends -->
    <!-- footer section starts  -->

    <section class="footer">

        <div class="links">
            <a asp-action="Index" asp-controller="Home" class="btn">home</a>
            <a asp-action="Index" asp-controller="Home" class="btn">menu</a>
            <a asp-action="Index" asp-controller="Home" class="btn">about</a>
            <a asp-action="Index" asp-controller="Home" class="btn">contact</a>
        </div>

        <p class="credit"> created by <span><a href="https://freewebsitecode.com/">Free Website Code</a></span> | all rights reserved! </p><br>

    </section>

    <!-- footer section ends -->
    <!-- custom js file link      -->
    @*<script src="/js/script.js"></script>*@

    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

    <script>

        AOS.init({
            duration: 800,
        });

    </script>
    <script src="~/js/loginregister.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
